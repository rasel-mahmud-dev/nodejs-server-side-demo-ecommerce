<%-include('./common/head.ejs') %>
<link rel="stylesheet" href="/style/product-list.css">

</head>

<body>
  <%-include('./common/navigation.ejs') %>

  <div class="container">
      <%if(message){ %>
        <p class="notification"><%=message %></p>
      <% } %>

      <div class="row justify-content-center">
          <% for(let product of products) { %>
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 my-4">
                <div class="product-box">
                    <div class="product-box_image">
                      <img src="<%=product.imageUrl %>" alt="FDFD">
                    </div>    
                    <h3 class="product-title"><%=product.title %></h3>
                    <p class="product-price">$<%=product.price %></p>
                    
                    <%if(isLogged) { %>
                      <div class="d-flex justify-content-center">
                        <form action="/admin/add-cart" method="post">
                          <input type="hidden" name="productId" value="<%=product._id %>">
                          <button type="submit" class="product-cart-btn">Add Cart</button>
                        </form>
                        <form action="/shop/products/<%=product._id %>" method="get">
                          <button type="submit" class="product-cart-btn">Details</button>
                        </form>
                      </div>

                    <% } else { %>
                      <form action="/auth/register" method="GET">
                        <button type="submit" class="product-cart-btn">Add Cart</button>
                      </form>
                    <% } %>        
                  </div>
              </div>
            <% } %>
         </div>
  

  <%-include('./common/end.ejs') %>