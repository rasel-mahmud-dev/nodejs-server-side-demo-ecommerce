<%-include('../common/head.ejs') %>
<link rel="stylesheet" href="/style/product-list.css">

</head>

<body>
  <%-include('../common/navigation.ejs') %>

  <div class="container">
      <%if(message){ %>
        <p class="notification"><%=message %></p>
      <% } %>

      <% if(products.length === 0){ %>
        <h2>No Product Available</h2>
      <% } %>

   <div class="row justify-content-center">
      <% for(let product of products) { %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 my-4">
            <div class="product-box">
                <div class="product-box_image">
                  <img src="/<%=product.imageUrl %>" alt="FDFD">
                </div>    
                <h3 class="product-title"><%=product.title %></h3>
                <p class="product-price">$<%=product.price %></p>
                <div class="action">
                  <button class="product-cart-btn">Add Cart</button>
                  <form action="/admin/delete/<%=product._id %>" method="post">
                    <button type="submit" class="product-cart-btn">Delete</button>
                  </form>
                </div>
              </div>
        </div>
      <% } %>
   </div>
    
  </div>
  

  <%-include('../common/end.ejs') %>